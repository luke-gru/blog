<h1 class="text-4xl font-bold">Posts</h1>

<% @posts.each do |post| %>
  <div class="post my-10">
    <div class="post-title text-xl font-semibold"><%= post.title %></div>
    <div class="post-author italic">By <%= post.user.display_name %></div>
    <div class="post-time italic">Written on <%= post.user.created_at.to_date %></div>
    <div class="post-content mt-5"><%= post.content %></div>
  </div>
<% end %>
